
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section head{
    <style>
        .main-container {
            background-color: #FFFFFF;
            margin: 0em auto;
            box-shadow: 0px 0px 2px 0px rgba(0, 0, 0, 0.05);
            padding: 2em 2em 7em;
            z-index: 1;
        }
    </style>
}

<div class="main-container">
    
    <div>
        



        <table class="ui celled striped table">
            <thead>
                <tr>
                    <th colspan="2"><a class="ui button blue" href="..@ViewBag.zipurl">二维码打包下载</a> </th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                    foreach (var temp in ViewBag.list)
                    {
                        <tr>
                            <td><a href="..@temp" >第 @i 个二维码图片</a></td>
                            <td  style="text-align: center;width:100px"><a href="..@temp" class="ui button" download="">下载</a></td>
                        </tr>
                        i++;
                    }

                }
          

            </tbody>
        </table>
    </div>
</div>
