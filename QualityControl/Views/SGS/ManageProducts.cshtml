@section scripts{
    <script src="~/Scripts/bower_components/datatables/media/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('table').DataTable({
                "language": {
                    "sProcessing": "处理中...",
                    "sLengthMenu": "显示 _MENU_ 项结果",
                    "sZeroRecords": "没有匹配结果",
                    "info": "第 _PAGE_ 页 ( 总共 _PAGES_ 页 )",
                    "sInfoEmpty": "共 0 项",
                    "sInfoFiltered": "(由 _MAX_ 项结果过滤)",
                    "sInfoPostFix": "",
                    "sSearch": "搜索:",
                    "sUrl": "",
                    "sEmptyTable": "表中数据为空",
                    "sLoadingRecords": "载入中...",
                    "sInfoThousands": ",",
                    "oPaginate": {
                        "sFirst": "首页",
                        "sPrevious": "上页",
                        "sNext": "下页",
                        "sLast": "末页"
                    },
                    "oAria": {
                        "sSortAscending": ": 以升序排列此列",
                        "sSortDescending": ": 以降序排列此列"
                    }

                },
                "bLengthChange": false
            });
            $("#form .field label").html("按产品种类搜索");
        });

        function See(x) {
            $.ajax({
                type: 'Get',
                url: '/Product/GetCpInfo',
                data: { id: x },
                success: function(data) {
                    $("#scpname").html(data.cp.Name);
                    $("#scpid").val(data.cp.Id);
                    $("#scpProductionCertificateNo").val(data.cp.ProductionCertificateNo);
                    $("#scpgetdate").val(data.cp.GetDate);
                    $("#scpstandard").val(data.cp.Standard);
                    $("#scpProductTypeId").val(data.tname);



                    $('#seecp').modal('show');
                },
                dataType: "json"
            });

        };



        function Edit(th,id) {
            var price = th.parent().parent().parent().find(".price").html();
            var time = th.parent().parent().parent().find(".time").html();
            $("#editid").val(id);
            $("#price").val(price);
            $("#needay").val(time);
            $('#edit').modal('show');
        }
        function sub() {
            $('.ui.form').submit();
        }

        //表单验证
        $('.ui.form')
            .form({
                fields: {
                    name: {
                        identifier: 'price',
                        rules: [
                            {
                                type: 'empty',
                                prompt: '请输入价钱！'
                            }
                        ]
                    },
                    Description: {
                        identifier: 'days',
                        rules: [
                            {
                                type: 'empty',
                                prompt: '请输入需要时间！'
                            }
                        ]
                    }

                }
            });


    </script>
}






