@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section head{
    <link href="~/Scripts/bower_components/datatables/media/css/jquery.dataTables.css" rel="stylesheet"/>

    <style>
        .main-container {
            background-color: #FFFFFF;
            box-shadow: 0px 0px 2px 0px rgba(0, 0, 0, 0.05);
            margin: 0em auto;
            padding: 2em 2em 7em;
            z-index: 1;
        }

        .mycontent { margin-bottom: 30px; }
    </style>
}

<div class="main-container">
    <h2 class="ui dividing header">
        @if (ViewBag.s == 0)
        {
            <div>未读信息</div>
        }
        else
        {
            <div>已读信息</div>
        }
        <a class="anchor" id="types"></a>
    </h2>


    <table class="ui  celled  table">
        <thead class="">
        <tr>
            <th style="text-align: center">内容</th>

            @if (ViewBag.s == 0)
            {
                <th>操作</th>
            }

        </tr>
        </thead>
        <tbody>

        @if (ViewBag.count == 0)
        {
        }
        else
        {
            foreach (var Tempx in ViewBag.list)
            {
                <tr>
                    <td style="text-align: center">@Tempx.Content</td>

                    @if (ViewBag.s == 0)
                    {
                        <td>
                            <div class="2  fluid ui">
                                <a class="ui  button" href="/Message/Read/@Tempx.Id">标记为已读</a>

                            </div>
                        </td>
                    }
                </tr>
            }
        }

        </tbody>
        <tfoot>
        <tr></tr>
        </tfoot>
    </table>
</div>


@section scripts{
    <script src="~/Scripts/bower_components/datatables/media/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function() {
            $('table').DataTable({
                "language": {
                    "sProcessing": "处理中...",
                    "sLengthMenu": "显示 _MENU_ 项结果",
                    "sZeroRecords": "没有匹配结果",
                    "info": "第 _PAGE_ 页 ( 总共 _PAGES_ 页 )",
                    "sInfoEmpty": "共 0 项",
                    "sInfoFiltered": "(由 _MAX_ 项结果过滤)",
                    "sInfoPostFix": "",
                    "sSearch": "搜索:",
                    "sUrl": "",
                    "sEmptyTable": "表中数据为空",
                    "sLoadingRecords": "载入中...",
                    "sInfoThousands": ",",
                    "oPaginate": {
                        "sFirst": "首页",
                        "sPrevious": "上页",
                        "sNext": "下页",
                        "sLast": "末页"
                    },
                    "oAria": {
                        "sSortAscending": ": 以升序排列此列",
                        "sSortDescending": ": 以降序排列此列"
                    }

                },
                "bLengthChange": false
            });
            $("#form .field label").html("按产品种类搜索");
        });


    </script>
}