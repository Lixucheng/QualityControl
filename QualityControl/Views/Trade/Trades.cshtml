
@{
    ViewBag.Title = "Trades";
    Layout = "~/Views/Shared/_LayoutWithHeader.cshtml";
}
@model List<QualityControl.Models.Adapters.TradeInfo>
<div class="container ui am-padding">
    @if (Model.Count != 0)
    {
        <table class="ui compact celled table">
            <thead>
                <tr>
                    <th>用户名</th>
                    <th>用户邮箱</th>
                    <th>申请时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.User.UserName</td>
                        <td>@item.User.Email</td>
                        <td>@item.Trade.CeateTime.ToShortDateString()</td>
                        <td>
                            <a href="/DetectionScheme/BuildDetectionScheme?tradeId=@item.Trade.Id" class="ui button detail-btn">制作方案</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }

</div>

