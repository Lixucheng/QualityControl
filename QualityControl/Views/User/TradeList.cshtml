 
@{
    ViewBag.Title = "TradeList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using Newtonsoft.Json
@using QualityControl.Models
@model IEnumerable<QualityControl.Db.Trade>
<div class="main-container">
    <h2 class="ui dividing header">
        所有订单
        <a class="anchor" id="types"></a>
    </h2>

    <table class="ui  celled  table">
        <thead class="">
            <tr>
                <th>订单号</th>
                <th>检测产品</th>
                <th>检测报价</th>
                <th>检测时间</th>               
                <th>订单状态</th>        
            </tr>
        </thead>
        <tbody>
            
            @if (ViewBag.count == 0)
            {

            }
            else
            {
                foreach (var Tempx in Model)
                {
                    var p = JsonConvert.DeserializeObject<ProductCopy>(Tempx.Product);
                    
                    <tr>
                        <td>@Tempx.Id</td>
                        <td>@p.Name</td>
                        <td>@Tempx.Schemes.Where(e=>e.Status!=QualityControl.Db.EnumDetectionSchemeStatus.修改完成留档保存).First().</td>
                        <td>@Tempx.ProductionCertificateNo</td>
                        <td>@Tempx.GetDate</td>
                        <td>@Tempx.Standard</td>


                        <td>
                            <div class="2  fluid ui">
                                <button class="ui  button" onclick="See(@Tempx.Id)">详细</button>

                                <button class="ui  button" onclick="Choose(@Tempx.Id)">确定选择</button>
                            </div>
                        </td>
                    </tr>
                }
            }

        </tbody>
        <tfoot>
            <tr></tr>
        </tfoot>
    </table> 

</div>

