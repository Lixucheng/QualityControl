@{
    ViewBag.Title = "用户中心";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section head{
    <style>
        .sm-col {
            width: 64px;
        }

        .op-col {
            width: 128px;
        }

        .table-parent {
            overflow: auto;
        }

            .table-parent table {
                min-width: 800px !important;
            }
    </style>
}
@using System.Linq;
@using Newtonsoft.Json.Linq;
@using Newtonsoft.Json;

@model IEnumerable<QualityControl.Db.Product>

<div class="am-margin am-padding">


        <div class=" six wide field">
            <div class="am-text-center ui segment">
                <a href="/Event/Current?type=0" class="ui red statistic">
                    <div class="value"><i class="at icon"></i> @ViewBag.a</div>
                    <div class="label">已完成管控</div>
                </a>
                <a href="/Event/Current?type=1" class="ui orange statistic">
                    <div class="value"><i class="spinner icon"></i> @ViewBag.i</div>
                    <div class="label">正在进行中的合同</div>
                </a>

            </div>
        </div>

  

   
    <br />
        <div class="ui container">
        <div class="row">
            <div class="column">
                <div class="ui message">
                    <h1 class="ui header">管控合同管理</h1>
                    <p></p>
                    <a href="/User/TradeList" class="ui blue button">查看合同列表</a>
                    <a href="/Trade/ChooseProduct" class="ui teal button">新建管控合同</a>
                </div>
            </div>
        </div>
    </div>

    <br />
    <div class="ui container">
        <div class="row">
            <div class="column">
                <div class="ui message">
                    <h1 class="ui header">推荐商品</h1>
                    <div class="ui three cards">
                        <div class="card">
                            <div class="image">
                                @{
                                    var jarray = (JArray)JsonConvert.DeserializeObject(Model.ElementAt(0).Image);
                                    string ja1a = jarray[0].ToString();
                                }
                                <img src="@ja1a">
                            </div>
                            <div class="extra center aligned">
                                <p>@Model.ElementAt(0).Name</p>
                            </div>
                        </div>
                        <div class="card">
                            <div class="image">
                                @{
                                    var jarray1 = (JArray)JsonConvert.DeserializeObject(Model.ElementAt(1).Image);
                                    string ja1a1 = jarray1[0].ToString();
                                }
                                <img src="@ja1a1">
                            </div>
                            <div class="extra center aligned">
                                <p>@Model.ElementAt(1).Name</p>
                            </div>
                        </div>
                        <div class="card">
                            <div class="image">
                                @{
                                    var jarray2 = (JArray)JsonConvert.DeserializeObject(Model.ElementAt(2).Image);
                                    string ja1a2 = jarray2[0].ToString();
                                }
                                <img src="@ja1a2">
                            </div>
                            <div class="extra center aligned">
                                <p>@Model.ElementAt(2).Name</p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
   



</div>