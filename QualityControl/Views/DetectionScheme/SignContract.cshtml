
@{
    ViewBag.Title = "SignContract";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section head{
    <style>
        .bigestdiv {
            margin-left: 5%;
            margin-right: 5%;
            margin-top: 50px;
            margin-bottom: 50px;
        }

        .title {
            float: left;
        }
    </style>
}
<div class="bigestdiv">
    <div class="ui segments">
        <div class="ui segment">
            <p style="text-align: center; font-size: 30px">管控合同</p>
        </div>

        <div class="ui segment">
            <p class="title">检测产品：</p>
            <p>@ViewBag.productname</p>
        </div>
        <div class="ui segment">
            <p class="title">生产商：</p>
            <p>@ViewBag.company</p>
        </div>

        <div class="ui segment">
            <p class="">批次数量信息：</p>
        </div>

        <div class="ui segments">
            @foreach (var temp in ViewBag.list)
            {
                <div class="ui segment">
                    <p class="title">@temp.BatchName：</p>
                    <p>@temp.Count</p>
                </div>
            }
           

        </div>


        <div class="ui segment">
            <p>检查级别：</p>

        </div>
        <div class="ui segments">
            <div class="ui horizontal segments">
                <div class="ui segment">
                    <p>特殊检测水平</p>
                </div>
                <div class="ui segment">
                    <p>s-1</p>
                </div>
                <div class="ui segment">
                    <p>A</p>
                </div>
            </div>
        </div>

        <div class="ui segment ">

            <div class="field">
                <div class="3 fields">
                    <div class="field" style="">
                        <p style="margin: 0 auto" class="title">检测时间：</p>
                    </div>
                    <div class="field">
                        <p style="margin: 0 auto">@ViewBag.model.Time 天</p>
                    </div>
                    
                   
                 
                </div>
            </div>


        </div>

        <div class="ui segment form">

            <div class="field">
                <div class="3 fields">
                    <div class="field" style="">
                        <p style="margin: 0 auto">检测报价：</p>
                    </div>
                    <div class="field">
                        <p style="margin: 0 auto">@ViewBag.model.UserQuote </p>

                    </div>

                  
                </div>
            </div>


        </div>

        <div class="ui segment form">
            <div class="field" >
                <p class="title">更改意见：</p>
            </div>
            <div class="">
                <textarea id="modify"></textarea>
            </div>
        </div>



        <div class="ui segment" align="center">
            <button id="agree" class="positive ui button" style="width:25%">同意</button>
            <button id="noagr" class="negative ui button" style="width: 25%">返回修改</button>
            <p>如果同意以上内容请确定，不同意请填写更改意见后点击返回修改</p>
        </div>
    </div>
</div>
<input id="checknum" style="display:none" value="@ViewBag.model.CheckNum" />

@section scripts{
    <script>
        $("#agree").click(function() {
            var r=confirm("请仔细查看合同，确定合同内容，如果对方无异议则自动签订！");
            if (r==true)
            {
                alert("合同已确定！");
                //top.location = '../DetectionScheme/Sign?checknum=' + $("#checknum").val();
            }          
        });

        $("#noagr").click(function () {

            var r = confirm("请仔细查看合同，确定修改？");
            if (r == true) {
                var q1 = $("#modify").val();

                var c = $("#checknum").val();
                $.ajax({
                    url: '../DetectionScheme/Modify',
                    type: 'post',
                    data: { checknum: c, modify: q1 },

                    error: function () {
                        alert('连接错误！');
                    },
                    success: function (data) {
                        alert("已提交修改，等待审核！");
                        top.location = '..';
                    }
                });
            }
           
        });
    </script>
    }
